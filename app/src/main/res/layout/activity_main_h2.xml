<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityH2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="4"
        android:text="Toast Mesaj Yapımı"
        android:textColor="#F44336"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOrnek"
        tools:layout_editor_absoluteX="48dp" />

    <Button
        android:id="@+id/buttonh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="40dp"
        android:text="AdSoyad Yaz"
        app:layout_constraintStart_toEndOf="@+id/textViewSonucMetni"
        app:layout_constraintTop_toBottomOf="@+id/metinKutusu1" />

    <TextView
        android:id="@+id/textViewSonucMetni"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/buttonh1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metinKutusu1" />

    <EditText
        android:id="@+id/metinKutusu1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/buttonh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="50dp"
        android:onClick="mesaj"
        android:text="Tıkla"
        app:layout_constraintBottom_toTopOf="@+id/imageViewOrnek"
        app:layout_constraintEnd_toEndOf="@+id/buttonh1"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/buttonh1"
        app:layout_constraintTop_toBottomOf="@+id/buttonh1" />

    <ImageView
        android:id="@+id/imageViewOrnek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonh2"
        app:layout_constraintStart_toStartOf="@+id/buttonh2"
        app:layout_constraintTop_toBottomOf="@+id/buttonh2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/humidity" />

</androidx.constraintlayout.widget.ConstraintLayout>